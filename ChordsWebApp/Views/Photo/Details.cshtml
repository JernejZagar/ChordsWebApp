@model ChordsWebApp.Models.Photo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Photo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistPhoto)
        </dt>
        <dd class = "col-sm-10">
            <img src="@ViewBag.PhotoSrc" width="800" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistThumb)
        </dt>
        <dd class = "col-sm-10">
            <img src="@ViewBag.ThumbSrc" width="100" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
