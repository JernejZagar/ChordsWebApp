@model ChordsWebApp.Models.Photo

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Photo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistPhoto)
        </dt>
        <dd class = "col-sm-10">
            <img src="@ViewBag.PhotoSrc" width="800" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistThumb)
        </dt>
        <dd class = "col-sm-10">
            <img src="@ViewBag.ThumbSrc" width="100" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
