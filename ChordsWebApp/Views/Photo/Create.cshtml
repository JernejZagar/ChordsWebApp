@model ChordsWebApp.Models.Photo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Photo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Artist" class="control-label"></label>
                <br />
                @*<input asp-for="Artist" class="form-control" />*@
                <select asp-for="Artist" class="control-label" style="min-width: 200px;">
                    @foreach (var artist in ViewBag.AllArtists)
                    {
                        <option>@artist</option>
                    }
                  
                </select>
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistPhoto" class="control-label"></label>
                <input id="photo" type="file" asp-for="ArtistPhoto" class="control-label" />
                <span asp-validation-for="ArtistPhoto" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="ArtistThumb" class="control-label"></label>
                <input asp-for="ArtistThumb" class="form-control" />
                <span asp-validation-for="ArtistThumb" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
